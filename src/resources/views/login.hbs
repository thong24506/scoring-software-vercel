<main class="login">
    <form class="form-login" action="/login?_method=PUT" method="POST">
        <div class="form-group">
            <h1>Scoring Software</h1>
        </div>
        <div class="form-group">
            <h2>Đăng nhập</h2>
        </div>
        <div class="form-group">
            <label for="userName">Tên đăng nhập</label>
            <input type="text" class="form-control" id="userName" name="userName" spellcheck="false" required="true">
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" spellcheck="false" required="true">
        </div>
        {{#if error}}
            <div class="form-group">
                <p class="form-message-error">{{error}}</p>
            </div>
        {{/if}}
        <div class="form-group">
            <button class="form-btn" type="submit">Đăng nhập</button>
        </div>
        <div class="form-group">
            <p>
                Bạn chưa có tài khoản?
                <a href="/register">Đăng ký tại đây</a>
            </p>
        </div>
    </form>
</main>
