    <script>  
        document.addEventListener('DOMContentLoaded', function() {
            const main = document.querySelector('main').getAttribute('class');
            const navigation1Items = document.querySelectorAll('.navigation-1 .menu .item a');
            for(const navigation1Item of navigation1Items) {
                if(navigation1Item.classList.contains(main + '-page-link')) {
                    navigation1Item.classList.add('active');
                }
            }
        })
    </script>
