{{>header}}
<main class="home">
    <table border="1px solid #333" width="100%" style="font-size: 1.5rem;">
        <thead style="background-color: var(--sub-color);">
            <tr>
                <th>STT</th>
                <th>Mã môn học</th>
                <th>Tên môn học</th>
                <th>Tín chỉ</th>
                <th>%KT</th>
                <th>%THI</th>
                <th>Kiểm tra</th>
                <th>Thi</th>
                <th>TK10</th>
                <th>TKCH</th>
                <th>TK4</th>
                <th>KQ</th>
            </tr>
        </thead>
        <tbody>
            {{#each points}}
                <tr>
                    <th style="padding: 0 12px; background-color: var(--primary-color);" colspan="12" align="left">Học kỳ {{this.index}} - Năm học {{schoolYear this.index}}</th>
                </tr>
                {{#each this.data}}
                    <tr>
                        <th>{{sum @index 1}}</th>
                        <th>{{this.MMH}}</th>
                        <th>{{this.TMH}}</th>
                        <th>{{this.TC}}</th>
                        <th>{{this.KT}}</th>
                        <th>{{this.THI}}</th>
                        <th>{{this.KTRA}}</th>
                        <th>{{this.THIL1}}</th>
                        <th>{{this.TK10}}</th>
                        <th>{{this.TKCH}}</th>
                        <th>{{this.TK4}}</th>
                        <th>{{this.KQ}}</th>
                    </tr>
                {{/each}}
                <tr>
                    <th style="padding: 0 12px;" colspan="12" align="left">Điểm trung bình học kỳ hệ 10: &nbsp; {{this.totalScore.TK10}}</th>
                </tr>
                <tr>
                    <th style="padding: 0 12px;" colspan="12" align="left">Điểm trung bình học kỳ hệ 4: &nbsp; {{this.totalScore.TK4}}</th>
                </tr>
                <tr>
                    <th style="padding: 0 12px;" colspan="12" align="left">Số tín chỉ tích lũy: &nbsp; {{this.totalScore.TC}}</th>
                </tr>
                <tr>
                    <th colspan="12">---</th>
                </tr>
                {{else}}
                <tr>
                    <th style="padding: 0 12px; background-color: var(--primary-color); text-align: center;" colspan="14" align="left">
                        Bạn chưa thêm môn học nào.
                        <a href="/point/create/{{user.userId}}" style="margin-left: 20px;"> (Thêm môn học)</a>
                    </th>
                </tr>
            {{/each}}
        </tbody>
    </table>
</main>