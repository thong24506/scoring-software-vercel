<main class="register">
    <form class="form-register" action="/register/perform" method="POST">
        <div class="form-group">
            <h1>Scoring Software</h1>
        </div>
        <div class="form-group">
            <h2>Đăng ký</h2>
        </div>
        <div class="form-group">
            <label for="name">Họ và tên</label>
            <input type="text" class="form-control" value="{{user.name}}" id="name" name="name" spellcheck="false" required="true">
        </div>
        <div class="form-group">
            <label for="userName">Tên đăng nhập</label>
            <input type="text" class="form-control" value="{{user.userName}}" id="userName" name="userName" spellcheck="false" required="true">
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" value="{{user.password}}" id="password" name="password" spellcheck="false" required="true">
        </div>
        <div class="form-group">
            <label for="rePassword">Nhập lại mật khẩu</label>
            <input type="password" class="form-control {{active}}" value="{{user.rePassword}}" id="rePassword" name="rePassword" spellcheck="false" required="true">
        </div>
        {{#if error}}
            <div class="form-group">
                <p class="form-message-error">{{error}}</p>
            </div>
        {{/if}}
        <div class="form-group">
            <button class="form-btn" type="submit">Đăng ký</button>
        </div>
        <div class="form-group">
            <p>
                Bạn đã có tài khoản?
                <a href="/">Đăng nhập tại đây</a>
            </p>
        </div>
    </form>
</main>